# Enable Bash colours.
if tput setaf 1 &> /dev/null; then
	tput sgr0;
	BOLD=$(tput bold);
	RESET=$(tput sgr0);
	BLACK=$(tput setaf 0);
	BLUE=$(tput setaf 4);
	CYAN=$(tput setaf 6);
	GREEN=$(tput setaf 2);
	ORANGE=$(tput setaf 166);
	PURPLE=$(tput setaf 125);
	RED=$(tput setaf 1);
	VIOLET=$(tput setaf 61);
	WHITE=$(tput setaf 15);
	YELLOW=$(tput setaf 3);
else
	BOLD='';
	RESET="\e[0m";
	BLACK="\e[1;30m";
	BLUE="\e[1;34m";
	CYAN="\e[1;36m";
	GREEN="\e[1;32m";
	ORANGE="\e[1;33m";
	PURPLE="\e[1;35m";
	RED="\e[1;31m";
	VIOLET="\e[1;35m";
	WHITE="\e[1;37m";
	YELLOW="\e[1;33m";
fi;

# Highlight the user name when logged in as root.
if [[ "${USER}" == "root" ]]; then
	USERSTYLE="${RED}";
else
	USERSTYLE="${BLUE}";
fi;

# Highlight the hostname when connected via SSH.
if [[ "${SSH_TTY}" ]]; then
	HOSTSTYLE="${BOLD}${RED}";
else
	HOSTSTYLE="${BLUE}";
fi;

# PS1 Input
# User@Host : /current/path 
# $ 
PS1="${USERSTYLE}\u${RESET}"
PS1+="${BLUE}@${RESET}"
PS1+="${HOSTSTYLE}\h${RESET}"
PS1+=" : "
PS1+="${YELLOW}\w${RESET} \n"
PS1+="${YELLOW}\$${RESET} "

# PS2 Input
# → 
PS2="${YELLOW}→${RESET} "

# Export Prompts and Colours
export CLICOLOR=1
export PS1
export PS2